<!-- res/layout/diet_plan_item.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dietNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet Name" />

    <TextView
        android:id="@+id/dietForWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet For Weight" />

    <TextView
        android:id="@+id/dietQuantityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet Quantity" />
</LinearLayout>
